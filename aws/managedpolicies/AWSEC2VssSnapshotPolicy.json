        ],
        "Sid": "CreateSnapshotsAccessInstance"
      },
      {
        "Action": [
          "ec2:CreateSnapshots"
        ],
        "Effect": "Allow",
        "Resource": [
          "arn:aws:ec2:*:*:volume/*"
        ],
        "Sid": "CreateSnapshotsAccessVolume"
      },
      {
        "Action": [
          "ec2:CreateImage"
        ],
        "Condition": {
          "StringLike": {
            "aws:RequestTag/AwsVssConfig": "*"
          }
        },
        "Effect": "Allow",
        "Resource": [
          "arn:aws:ec2:*:*:snapshot/*",
          "arn:aws:ec2:*:*:image/*"
        ],
        "Sid": "CreateImageWithTag"
      },
      {
        "Action": [
          "ec2:CreateImage"
        ],
